<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal|center_vertical"
    tools:context="com.tuyet.googlemap.QuenMatKhauActivity"
    android:padding="10dp">

    <ImageView
        android:id="@+id/header"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@drawable/logoexam"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"/>
    <RelativeLayout
        android:id="@+id/relayRight"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/header"
        android:layout_height="wrap_content"

        android:layout_marginRight="20dp">


        <LinearLayout
            android:id="@+id/line_ketqua"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="THÔNG TIN THÍ SINH"
                android:textColor="#ffffff"
                android:textSize="22dp" />
        </LinearLayout>
        <LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dinhdang"
            android:orientation="vertical"
            android:layout_below="@+id/line_ketqua"
            android:id="@+id/ndtt"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ và tên: "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvHoVaTen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Hải Phong"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Mã số sinh viên: "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvMSSV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="12130045"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Ngày tháng năm sinh: "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvNgaySinh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="1/1/1994"
                        android:inputType="date"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Lớp: "
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/tvLop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="DH12DT"
                        android:textColor="#000000"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
