    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/header"
        android:background="@drawable/shape_effects_time"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/tv_hienthitime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thời gian còn lại: "
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27:15:06"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:inputType="time"
        android:layout_marginRight="5dp"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_socau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu 1: Đoạn code sau......"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">
        <ImageView
            android:id="@+id/img_cauhoi"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/code"
            android:layout_marginLeft="20dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án A"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:textSize="14dp"
                />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án B"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án C"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold"
                android:buttonTint="#ffffff"/>
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đáp án D"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:buttonTint="#ffffff"/>
        </RadioGroup>
        </LinearLayout>
    </LinearLayout>

