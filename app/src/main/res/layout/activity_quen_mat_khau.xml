<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context="com.tuyet.googlemap.QuenMatKhauActivity">

    <ImageView
        android:id="@+id/header"
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:src="@drawable/logoexam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dinhdang"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/header"
        android:layout_toRightOf="@+id/header">

            <TextView
                android:id="@+id/tvQMK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Hãy nhập mã số sinh viên để có thể lấy lại mật khẩu qua email của bạn!"
                android:textColor="#000000"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/botron"
                android:ems="10"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:text="Nhập vào đây!"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_below="@+id/tvQMK"/>


            <Button
                android:id="@+id/btnDangNhap"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_effects"
                android:text="Gửi"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/edtTaiKhoan"
                android:textColor="#ffffff"
                android:textSize="20dp"
                />
        </RelativeLayout>


</RelativeLayout>
