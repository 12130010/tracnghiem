<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:padding="16dp"
  >

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/logoexam"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dinhdang"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_logo">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:text="Tài khoản:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botron"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:ems="12"
                android:text="12130204@st.hcmuaf.edu.vn"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp"
                android:text="Mật khẩu:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/editMatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botron"
                android:inputType="textPassword"
                android:ems="12"
                android:text="12130204"
                android:textColor="#000000"
                android:textSize="16dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/linkQuenMatKhau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quenmatkhau"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="16dp"
                />

            <Button
                android:id="@+id/btnDangNhap"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/shape_effects"
                android:text="@string/dangnhap"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                 />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>